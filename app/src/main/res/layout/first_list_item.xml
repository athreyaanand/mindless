<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/featureImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#fff"
            android:src="@drawable/placeholder"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <TextView
                android:id="@+id/tansparentBkg"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#16000000"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/orangeBox"
                android:layout_width="64dp"
                android:layout_height="16dp"
                android:layout_above="@+id/title"
                android:layout_alignLeft="@+id/title"
                android:layout_alignStart="@+id/title"
                android:layout_marginBottom="6dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/featured"
                android:layout_width="60dp"
                android:layout_height="12dp"
                android:layout_above="@+id/title"
                android:layout_alignLeft="@+id/title"
                android:layout_alignStart="@+id/title"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:gravity="center"
                android:text="FEATURED"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/title"
                android:lineSpacingMultiplier="1.25"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="36dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:text="Pack up the family and head for the mountains this summer"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/relativeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:text="4 Hours Ago"
                android:textSize="14sp"
                android:textColor="#B8C4C5"/>

            <TextView
                android:id="@+id/space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:layout_toEndOf="@id/relativeTime"
                android:layout_toRightOf="@id/relativeTime"
                android:text=" â€¢ "
                android:textSize="14sp"
                android:textColor="#B8C4C5"/>

            <TextView
                android:id="@+id/domain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_toEndOf="@id/space"
                android:layout_toRightOf="@id/space"
                android:text="WSJ.com"
                android:textSize="14sp"
                android:textColor="#B8C4C5"/>
        </RelativeLayout>
</android.support.v7.widget.CardView>